{
    "name": "cat-energy",
    "private": true,
    "description": "Личный проект «Кэт энерджи» от HTML Academy",
    "devDependencies": {
        "@htmlacademy/editorconfig-cli": "1.0.0",
        "autoprefixer": "9.8.4",
        "browser-sync": "^2.27.5",
        "gulp": "4.0.2",
        "gulp-less": "4.0.1",
        "gulp-plumber": "1.2.1",
        "gulp-postcss": "8.0.0",
        "gulp-sourcemaps": "2.6.5",
        "stylelint": "13.6.1",
        "stylelint-config-htmlacademy": "0.1.4"
    },
    "scripts": {
        "editorconfig": "editorconfig-cli",
        "stylelint": "stylelint \"src/less/**/*.less\" --syntax less",
        "test": "npm run editorconfig && npm run stylelint",
        "build": "gulp styles",
        "start": "gulp"
    },
    "browserslist": [
        "last 2 versions",
        "not dead",
        "not ie <= 11"
    ],
    "editorconfig-cli": [
        "*.json",
        "*.js",
        "src/*.html",
        "src/js/**/*.js",
        "src/img/**/*.svg",
        "src/less/**/*.less"
    ],
    "engines": {
        "node": "12.18.2"
    },
    "version": "1.0.0",
    "main": "gulpfile.js",
    "dependencies": {},
    "repository": {
        "type": "git",
